<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bóng đổ -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/> <!-- Bán kính góc bo tròn -->
            <solid android:color="#000000" /> <!-- Màu của bóng -->
            <padding android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp" /> <!-- Padding cho bóng -->
            <size android:width="match_parent" android:height="match_parent"/>
        </shape>
    </item>

    <!-- Nền chính -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/> <!-- Bán kính góc bo tròn -->
            <solid android:color="@android:color/white"/> <!-- Màu nền -->
        </shape>
    </item>
</layer-list>
